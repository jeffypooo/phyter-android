<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text Appearances -->

    <style name="PhyterTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="fontPath">fonts/Avenir.ttc</item>
    </style>

    <style name="PhyterTextAppearance.Huge" parent="PhyterTextAppearance">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="PhyterTextAppearance.Large" parent="PhyterTextAppearance">
        <item name="android:textSize">26sp</item>
    </style>

</resources>
