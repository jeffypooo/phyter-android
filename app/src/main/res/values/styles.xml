<resources>

  <!-- Base application theme. -->
  <style name="AppTheme"
         parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:statusBarColor">@color/colorPrimaryDark</item>
  </style>

  <!-- Text Appearances -->

  <style name="AppTheme.TextAppearance.Avenir"
         parent="TextAppearance.AppCompat">
    <item name="fontPath">fonts/Avenir.ttc</item>
  </style>

  <style name="AppTheme.TextAppearance.Avenir.Huge"
         parent="AppTheme.TextAppearance.Avenir">
    <item name="android:textSize">40sp</item>
  </style>

  <style name="AppTheme.TextAppearance.Avenir.Large"
         parent="AppTheme.TextAppearance.Avenir">
    <item name="android:textSize">26sp</item>
  </style>

  <style name="AppTheme.TextAppearance.Avenir.Medium"
         parent="AppTheme.TextAppearance.Avenir">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="AppTheme.TextAppearance.Avenir.Small"
         parent="AppTheme.TextAppearance.Avenir">
    <item name="android:textSize">14sp</item>
  </style>

  <!-- Widgets -->

  <style name="AppTheme.Toolbar"
         parent="Base.Widget.AppCompat.Toolbar">
    <item name="android:background">@color/colorPrimaryDark</item>
    <item name="android:minHeight">40dp</item>
    <item name="android:maxHeight">60dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textColorSecondary">@android:color/white</item>
    <item name="titleTextColor">@android:color/white</item>
    <item name="subtitleTextColor">@android:color/white</item>
    <item name="popupTheme">@style/AppTheme.Toolbar.Popup</item>
  </style>

  <style name="AppTheme.Toolbar.Popup" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:background">@color/colorAccent</item>
    <item name="android:textColor">@android:color/white</item>
  </style>


</resources>
